<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:customcontrols="clr-namespace:Itinera.Client.CustomControls"
             xmlns:components="clr-namespace:Itinera.Client.Views.Components"
             x:Class="Itinera.Client.TestsReviewsPage"
             Title="TestsReviewsPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Welcome to TestReview page!"
            FontSize="20"
            FontFamily="RobotoSemiBold"
            VerticalOptions="Center" 
            Margin="0,20,0,20"
            HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding ReviewCollectionVm}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <components:ReviewHeader BindingContext="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>