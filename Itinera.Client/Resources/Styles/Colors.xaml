<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!--Itinera colors-->
    <Color x:Key="Primary">#CD4F39</Color>
    <Color x:Key="PrimaryText">#615D60</Color>
    <Color x:Key="PrimaryDarkText">#32292F</Color>
    <Color x:Key="Secondary">#615D60</Color>
    <Color x:Key="Tertiary">#9A8F97</Color>
    <Color x:Key="Accent">#64B6AC</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Green">#39CD77</Color>
    <Color x:Key="Orange">#D67C3C</Color>
    <Color x:Key="Red">#D63C3C</Color>
    <Color x:Key="Yellow">#FDCE4E</Color>
    <Color x:Key="DarkGrey">#464646</Color>
    
    <Color x:Key="Background">#EBEBEB</Color>
    <Color x:Key="NavBarGrey">#F3F3F3</Color>
    <Color x:Key="BorderColor">#D2D2D2</Color>

    <Color x:Key="LightRed">#E4D5D1</Color>
    <Color x:Key="LightGrey">#EBEBEB</Color>
    <Color x:Key="LightDarkerGrey">#D9D9D9</Color>
    <Color x:Key="MediumRed">#C5674F</Color>

    <Color x:Key="Taupe300">#E1DEE0</Color>
    <Color x:Key="Taupe500">#CDC7CB</Color>
    <Color x:Key="Taupe700">#B9B1B7</Color>

    <Color x:Key="NotFound">#E700F7</Color>

    <!--MAUI standards-->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    
    <!--Itinera brushes-->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryText}"/>
    <SolidColorBrush x:Key="PrimaryDarkTextBrush" Color="{StaticResource PrimaryDarkText}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource Orange}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource Yellow}"/>
    <SolidColorBrush x:Key="DarkGreyBrush" Color="{StaticResource DarkGrey}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="NavBarGreyBrush" Color="{StaticResource NavBarGrey}"/>
    <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}"/>

    <SolidColorBrush x:Key="LightRedBrush" Color="{StaticResource LightRed}"/>
    <SolidColorBrush x:Key="LightGreyBrush" Color="{StaticResource LightGrey}"/>
    <SolidColorBrush x:Key="MediumRedBrush" Color="{StaticResource MediumRed}"/>


    <SolidColorBrush x:Key="Taupe300Brush" Color="{StaticResource Taupe300}"/>
    <SolidColorBrush x:Key="Taupe500Brush" Color="{StaticResource Taupe500}"/>
    <SolidColorBrush x:Key="Taupe700Brush" Color="{StaticResource Taupe700}"/>

    <SolidColorBrush x:Key="NotFoundBrush" Color="{StaticResource NotFound}" />

    <!--MAUI standard brushes-->
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>