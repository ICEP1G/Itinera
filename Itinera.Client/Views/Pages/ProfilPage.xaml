            <HorizontalStackLayout
                HorizontalOptions="Center"
                Margin="0,125"
                Spacing="5">
                

                <VerticalStackLayout Grid.Column="2" Margin="0,60,0,0" Spacing="5">
                    <Grid>
                        <Label
                        Text="Member since"
                        FontSize="15"
                        TextColor="Black"
                        FontFamily="Poppins"/>

                        <Label 
                        Text="March 5, 2025"
                        FontSize="15"
