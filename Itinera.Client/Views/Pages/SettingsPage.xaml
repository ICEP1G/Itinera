<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Itinera.Client.Views.Components"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Itinera.Client.SettingsPage"
             Shell.NavBarIsVisible="False"
             Title="SettingsPage">
    
    <Grid 
        RowDefinitions="Auto, 50, Auto, *"
        RowSpacing ="15">

        <Image Grid.Row="0" x:Name="GoBackToProfil"
                    Source="backarrow_icon.png"
                    HeightRequest="18"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="15,0">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior TintColor="{StaticResource PrimaryText}" />
            </Image.Behaviors>
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoBackCommand}" />
            </Image.GestureRecognizers>
        </Image>

        <components:TabMenu Grid.Row="1" BindingContext="{Binding TabMenu}" />
        
        <!--Settings filters -->
            <HorizontalStackLayout Grid.Row="1" IsVisible="{Binding UpdateProfilTabSelected}">
                <components:PlaceSearchFilters BindingContext="{Binding PlaceSearchFiltersOwnedPlacelists}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="1" IsVisible="{Binding UpdateAccountTabSelected}">
                <components:PlaceSearchFilters BindingContext="{Binding PlaceSearchFiltersFollowedPlacelists}"/>
            </HorizontalStackLayout>

        <!--Introduction-->

        <Label 
            Grid.Row="2"
            Text="Update profil"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            



        </Grid>
</ContentPage>