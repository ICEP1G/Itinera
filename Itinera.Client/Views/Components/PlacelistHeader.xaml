<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:components="clr-namespace:Itinera.Client.Views.Components"
             x:Class="Itinera.Client.Views.Components.PlacelistHeader"
             x:Name="PlacelistHeaderComponent">

    <ContentView.Content >
        <Border 
        HeightRequest="140" 
        BackgroundColor="{StaticResource White}"
        Stroke="{StaticResource BorderColor}">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToPlacelistDetailCommand}" />
            </Border.GestureRecognizers>
            <StackLayout
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Orientation="Horizontal">

                <!--Image container-->
                <StackLayout
                WidthRequest="140">
                    <Image 
                    HeightRequest="140"
                    Aspect="AspectFill"
                    Source="{Binding ImageUrl}" />
                </StackLayout>

                <!--Informations container-->
                <Grid 
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Padding="16, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackLayout Grid.Row="0"
                    Orientation="Vertical">
                        <Label
                        Text="{Binding Name}"
                        FontSize="18"
                        FontFamily="RobotoSemiBold"
                        TextColor="{StaticResource PrimaryDarkText}"/>
                        <Label
                        Margin="0,3,0,0"
                        Text="{Binding Description}"
                        FontSize="14"
                        FontFamily="RobotoRegular"
                        TextColor="{StaticResource PrimaryText}"/>
                    </StackLayout>

                    <Grid Grid.Row="2"
                      VerticalOptions="End">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <HorizontalStackLayout Grid.Column="0"
                        VerticalOptions="Center">
                            <CollectionView ItemsSource="{Binding PlaceIconUris}" >
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding .}" 
                                               HeightRequest="20" 
                                               WidthRequest="20"
                                               Margin="0, 0, 10, 0">
                                            <Image.Behaviors>
                                                <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}" />
                                            </Image.Behaviors>
                                        </Image>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </HorizontalStackLayout>

                        <!--Recommendation container-->
                        <HorizontalStackLayout Grid.Column="2" 
                        Spacing="8"
                        VerticalOptions="End">
                            <Image Source="star_icon.png"
                               IsVisible="{Binding IsFavorite}"
                               WidthRequest="24"
                               HeightRequest="24">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource Yellow}" />
                                </Image.Behaviors>
                            </Image>
                            <components:Recommendation RecommendationCount="{Binding RecommendationCount}" Size="Mini" IsDark="True" />
                        </HorizontalStackLayout>

                    </Grid>
                </Grid>

            </StackLayout>
        </Border>
    </ContentView.Content>
</ContentView>
