<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Itinera.Client.Views.Components.UpdateProfil">
    <Grid
        RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, *"
        RowSpacing="10">

        <Border
                Grid.Row="0"
                WidthRequest="125"
                HeightRequest="125"
                HorizontalOptions="Center"
                BackgroundColor="White"
                Stroke="White"
                StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="62.5" />
            </Border.StrokeShape>
            <Image
                    Source="{Binding ProfilePictureUrl}"
                    Aspect="AspectFill"
                    WidthRequest="125"
                    HeightRequest="125"/>
        </Border>

        <Label
            Grid.Row="1"
            HorizontalOptions="Center"
            Text="Update your public profil"
            FontFamily="PoppinsMedium"
            FontSize="16"/>

        <Label
            Grid.Row="2"
            HorizontalOptions="Center"
            Text="Those informations are visible by others."
            FontSize="14"/>

        <Entry
            Grid.Row="3"
            Text="{Binding Username}"
            Placeholder="Enter your username"
            FontFamily="WorkSansRegular"
            WidthRequest="350"
            PlaceholderColor="White"
            BackgroundColor="Transparent"
            HeightRequest="40"/>

        <Entry
           Grid.Row="4"
           Text="{Binding FirstName}"
           Placeholder="Enter your first name"
           FontFamily="WorkSansRegular"
           WidthRequest="350"
           PlaceholderColor="White"
           BackgroundColor="Transparent"
           HeightRequest="40"/>

        <Border
            Grid.Row="5"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 10"
            Margin="10,0,10,0">
            
            <Editor
                Text="{Binding ProfilDescription}"
                Placeholder="Enter your description"
                TextColor="Black"
                FontFamily="WorkSansRegular"
                WidthRequest="350"
                HeightRequest="120"
                PlaceholderColor="White"
                BackgroundColor="Transparent"
                AutoSize="TextChanges"/>
        </Border>

        <Border Grid.Row="6"
                StrokeThickness="0"
                BackgroundColor="White"
                Padding="10"
                HeightRequest="40"
                WidthRequest="350"
                HorizontalOptions="Center">
            <Grid ColumnDefinitions="Auto, *"
                  ColumnSpacing="10">
                <Image Source="instagram_icon"
                       HeightRequest="24"
                       WidthRequest="24"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Grid.Column="0">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}" />
                    </Image.Behaviors>
                </Image>
                <Entry x:Name="InstagramEntry"
                       Text="www.instagram.com/prideofgypsies"
                       Placeholder="Enter your Instagram"
                       FontFamily="WorkSansRegular"
                       FontSize="14"
                       TextColor="Black"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"
                       VerticalOptions="Center"
                       Grid.Column="1">
                </Entry>
            </Grid>
        </Border>


    </Grid>


</ContentView>
