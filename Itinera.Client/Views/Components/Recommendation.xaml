<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Itinera.Client.Views.Components.Recommendation">

    <ContentView.Content>
        <HorizontalStackLayout x:Name="MainContainer" HeightRequest="30">
            <Image x:Name="RecommendationIcon" Source="like_icon.png" />
            <Border x:Name="BorderContainer"
                VerticalOptions="Start"
                HeightRequest="17"
                BackgroundColor="{StaticResource Accent}"
                StrokeThickness="0"
                StrokeShape="50">
                <Label x:Name="LabelCount"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Text="{Binding RecommendationCount}"
                    TextColor="{StaticResource White}"
                    FontFamily="PoppinsSemiBold"
                    FontSize="10"
                    TranslationY="1"/>
            </Border>
        </HorizontalStackLayout>
    </ContentView.Content>
</ContentView>
